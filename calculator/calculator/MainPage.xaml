<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calculator.MainPage">

    <StackLayout Padding="20">

        <Frame BackgroundColor="WhiteSmoke" Padding="15" Margin="0,0,0,20">
            <Label x:Name="LblResult" Text="0" FontSize="60" FontAttributes="Bold" HorizontalTextAlignment="End">
                
            </Label>
        </Frame>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Button Grid.Row="0"
                    Grid.Column="0"
                    Text="C"
                    FontSize="Large"
                    FontAttributes="Bold"
                   Padding="25"
                    x:Name="BtnClear"
                    Clicked="BtnClear_Clicked"/>

            <Button Grid.Row="0"
            Grid.Column="1"
            Text="X"
            FontSize="Large"
             FontAttributes="Bold"
       
            x:Name="BtnX"
            Clicked="BtnX_Clicked"/>

            <Button Grid.Row="0"
            Grid.Column="2"
            Text="%"
            FontSize="Large"
             FontAttributes="Bold"
           
            x:Name="BtnPercentage"
            Clicked="BtnPercentage_Clicked"/>
            <Button Grid.Row="0"
   Grid.Column="3"
   Text="/"
   FontSize="Large"
    FontAttributes="Bold"

    
   Clicked="BtnCommonOperation_Clicked"/>

            <Button Grid.Row="1"
   Grid.Column="0"
   Text="1"
   FontSize="Large"
    FontAttributes="Bold"

   x:Name="BtnOne"
   Clicked="BtnCommon_Clicked"/>

            <Button Grid.Row="1"
Grid.Column="1"
Text="2"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>

            <Button Grid.Row="1"
Grid.Column="2"
Text="3"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>

            <Button Grid.Row="1"
Grid.Column="3"
Text="*"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommonOperation_Clicked"/>

            <Button Grid.Row="2"
Grid.Column="0"
Text="4"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>

            <Button Grid.Row="2"
Grid.Column="1"
Text="5"
                    TextColor="Black"
                    
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>

            <Button Grid.Row="2"
Grid.Column="2"
Text="6"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>

            <Button Grid.Row="2"
Grid.Column="3"
Text="-"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommonOperation_Clicked"/>

            <Button Grid.Row="3"
Grid.Column="0"
Text="7"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>
            <Button Grid.Row="3"
Grid.Column="1"
Text="8"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>
            <Button Grid.Row="3"
Grid.Column="2"
Text="9"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>

            <Button Grid.Row="3"
Grid.Column="3"
Text="+"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommonOperation_Clicked"/>

            <Button Grid.Row="4"
Grid.Column="0"
Text="."
                    TextColor="Black"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>
            
            <Button Grid.Row="4"
Grid.Column="1"
Text="0"
FontSize="Large"
 FontAttributes="Bold"


Clicked="BtnCommon_Clicked"/>


            <Button Grid.Row="4"
Grid.Column="2"
Text="="
FontSize="Large"
 FontAttributes="Bold"

x:Name="BtnEqual"
Clicked="BtnEqual_Clicked"/>





        </Grid>

    </StackLayout>

</ContentPage>
